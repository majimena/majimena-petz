<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="000000000000_clinic_invitation" author="custom">
        <createTable tableName="clinic_invitation">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="clinic_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="invited_user_id" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="activation_key" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=UTF8"/>
        </modifySql>
    </changeSet>

    <changeSet id="000000000000_clinic_invitation_ticket" author="custom">
        <createIndex indexName="idx1_clinic_invitation"
                     tableName="clinic_invitation">
            <column name="activation_key" type="varchar(20)"/>
        </createIndex>
        <createIndex indexName="idx2_clinic_invitation"
                     tableName="clinic_invitation">
            <column name="clinic_id" type="varchar(50)"/>
        </createIndex>
        <createIndex indexName="idx3_clinic_invitation"
                     tableName="clinic_invitation">
            <column name="user_id" type="varchar(50)"/>
        </createIndex>
        <createIndex indexName="idx4_clinic_invitation"
                     tableName="clinic_invitation">
            <column name="invited_user_id" type="varchar(50)"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
