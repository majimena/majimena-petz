<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="000000000000_product" author="custom">
        <createTable tableName="product">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="clinic_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="numeric(9,0)">
                <constraints nullable="false"/>
            </column>
            <column name="tax_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="tax_rate" type="numeric(3,2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(2000)">
                <constraints nullable="true"/>
            </column>
            <column name="removed" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=UTF8"/>
        </modifySql>
    </changeSet>

    <changeSet id="000000000000_product_index" author="custom">
        <createIndex indexName="idx1_product"
                     tableName="product">
            <column name="clinic_id" type="varchar(50)"/>
        </createIndex>
        <createIndex indexName="idx2_product"
                     tableName="product">
            <column name="name" type="varchar(50)"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
