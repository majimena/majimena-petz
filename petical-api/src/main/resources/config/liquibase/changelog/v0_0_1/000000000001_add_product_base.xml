<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="000000000001_product_base" author="custom">
        <createTable tableName="product_base">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="numeric(9,0)">
                <constraints nullable="false"/>
            </column>
            <column name="insurance" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="unit" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="tax_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="tax_rate" type="numeric(3,2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(2000)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=UTF8"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>
