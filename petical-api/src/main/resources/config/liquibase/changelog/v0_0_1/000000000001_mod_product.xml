<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="000000000001_product" author="custom">
        <addColumn tableName="product">
            <column name="course" afterColumn="clinic_id" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="category" afterColumn="course" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="insurance" afterColumn="price" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="unit" afterColumn="insurance" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="000000000001_product_index" author="custom">
        <createIndex indexName="idx3_product"
                     tableName="product">
            <column name="course" type="varchar(20)"/>
        </createIndex>
        <createIndex indexName="idx4_product"
                     tableName="product">
            <column name="category" type="varchar(50)"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
