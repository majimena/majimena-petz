<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="001_mod_ticket" author="custom">
        <dropColumn tableName="ticket" columnName="memo"></dropColumn>
        <addColumn tableName="ticket">
            <column name="autognosis" type="varchar(2000)" afterColumn="end_date_time">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="ticket">
            <column name="diagnosis_id" type="varchar(50)" afterColumn="autognosis">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="ticket">
            <column name="memo" type="varchar(10000)" afterColumn="diagnosis_id">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <sql>ALTER TABLE ticket MODIFY COLUMN chart_id varchar(50) NOT NULL;</sql>
    </changeSet>
</databaseChangeLog>
