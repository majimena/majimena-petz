<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="000000000000_clinic" author="custom">
        <createTable tableName="clinic">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(2)">
                <constraints nullable="false"/>
            </column>
            <column name="zip_code" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="phone_no" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="varchar(200)">
                <constraints nullable="true"/>
            </column>
            <column name="removed" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=UTF8"/>
        </modifySql>
    </changeSet>

    <changeSet id="000000000000_clinic_index" author="custom">
        <createIndex indexName="idx1_clinic"
                     tableName="clinic">
            <column name="name" type="varchar(50)"/>
        </createIndex>
        <createIndex indexName="idx2_clinic"
                     tableName="clinic">
            <column name="country" type="varchar(50)"/>
        </createIndex>
        <createIndex indexName="idx3_clinic"
                     tableName="clinic">
            <column name="state" type="varchar(50)"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
